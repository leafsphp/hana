{
  "name": "create-hana-app",
  "version": "0.26.0",
  "type": "module",
  "bin": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup src/index.ts --format esm,cjs --dts && cp -r templates dist/templates",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leafsphp/hana.git",
    "directory": "packages/create-hana-app"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "execa": "^9.6.1",
    "minimist": "^1.2.8",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@hanabira/config": "workspace:*",
    "@types/minimist": "^1.2.5",
    "@types/node": "^25.0.3",
    "@types/prompts": "^2.4.9",
    "eslint": "^9.39.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
